{
  "compilerOptions": {
    "lib": [
      "es5",
      "es6"
    ],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "strictNullChecks": false,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "vite"
      }
    ],
    "paths": {
      "@/*": ["./public/*"]
    },
    "typeRoots": ["./public/@types", "./public/node_modules/@types"]
  },
  "include": [
    "./public/src",
    "./public/src/*.ts",
    "./public/**/*.tsx",
    "./public/**/**/*.tsx",
    "./public/**/*.ts",
    "./public/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "app"
  ]
}
